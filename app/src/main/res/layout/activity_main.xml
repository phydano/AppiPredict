<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:stretchColumns="1">

            <ImageView
                android:id="@+id/firstBackground"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="fill_horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2.5dp"
                android:paddingTop="125dp"
                android:text="@string/frontpage"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button
                android:layout_below="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@layout/mybutton"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/start"
                android:textSize="10sp"
                android:onClick="gotoBrowsePrediction" />

            <TextView
                android:id="@+id/textViewPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstBackground"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="WHAT IS IPREDICT?"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewAboutUsContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPeople"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:lineSpacingExtra="2.5dp"
                android:paddingTop="15dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="@string/what_is_ipredict"
                android:textColor="#C8C8C8"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phone"
                android:layout_below="@+id/textViewAboutUsContent"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                 />

            <View
                android:id="@+id/aLine"
                android:layout_below="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8"/>

            <TextView
                android:id="@+id/whyUseiPredict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aLine"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="WHY USE IPREDICT?"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/whyUseiPredict"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/brain"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="48dip"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                </ImageView>

                <ImageView
                    android:id="@+id/coin"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="48dip"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/three"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prediction"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="48dip"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                </ImageView>

                <ImageView
                    android:id="@+id/phone2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="48dip"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/two"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="12sp"
                    android:text="@string/test_your_knowledge"
                    android:orientation="horizontal">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="@string/earn_real_money"
                    android:orientation="horizontal">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/four"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="OVER 100 \n PREDICTIONS"
                    android:orientation="horizontal">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="TRADE \n ANYWHERE"
                    android:orientation="horizontal">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/five"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/over_100_predictions"
                    android:orientation="horizontal">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/trade_anywhere"
                    android:orientation="horizontal">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/one"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="TEST YOUR \n KNOWLEDGE"
                    android:orientation="horizontal">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="EARN REAL \n MONEY"
                    android:orientation="horizontal">
                </TextView>
            </LinearLayout>

            <View
                android:id="@+id/aLine2"
                android:layout_below="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C8C8C8"/>

            <TextView
                android:id="@+id/whatDoOurUserThinks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aLine2"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="WHAT DO OUR USERS THINK?"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/whatDoOurUserThinks"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/usertwo"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </ImageView>

                <TextView
                    android:id="@+id/user1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/seven"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user2"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                </TextView>

                <ImageView
                    android:id="@+id/userone"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </ImageView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#444444"
                android:stretchColumns="1"
                android:layout_below="@+id/eight">

                <TextView
                    android:id="@+id/startToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="START TODAY \n WITH A FREE ACCOUNT"
                    android:textColor="#ffffff"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_below="@+id/startToday"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@layout/mybutton2"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="TRADE NOW"
                    android:textSize="10sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:onClick="gotoBrowsePrediction" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/supportbyVic"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:stretchColumns="1"
                android:layout_below="@+id/start">

                <TextView
                    android:id="@+id/proudlysupport"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:text="Proudly Supported by"
                    android:textColor="#7A7A7A"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/viclogo"
                    android:layout_below="@+id/proudlysupport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_below="@+id/supportbyVic">

                <LinearLayout
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/termprivacy"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="TERMS &amp; PRIVACY"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:orientation="horizontal">
                    </TextView>

                    <ImageView
                        android:id="@+id/twitterlogo"
                        android:layout_width="80dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:orientation="horizontal">
                    </ImageView>
                </LinearLayout>

                <TextView
                    android:layout_below="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="&#169; 2015 iPredict Limited">
                </TextView>

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>